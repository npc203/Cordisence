#:kivy 2.0.0
#:import utils kivy.utils

<Form>:
    id: form
    pos_hint:{"center_x":.3,"center_y":.4}
    size_hint: .5, None
    spacing: 40

<ConnectCard>:
    orientation:"vertical"
    size_hint:1,None
    spacing:10

    canvas.before:
        Color:
            rgba: 1, .5, .5, 1
        Line:
            width: 1
            rectangle: self.x-20, self.y-20, self.width+40, self.height+40

    MDTextField:
        id:client_id
        mode:"rectangle"
        hint_text: "Client ID"
    
    BoxLayout:
        size_hint:1,1
        MDLabel:
            text:"Status:"
            font_size: "14sp"

        MDIconButton:
            id:status_icon
            padding: (0,10,0,0)
            icon_size: "20sp"
            icon: "checkbox-blank-circle"
            theme_icon_color  : "custom"
            icon_color: utils.get_color_from_hex("#FFA000")
           
        
        MDRaisedButton:
            text: "Connect"
            on_release: root.connect()

<MainCard>:
    id: main_card
    size_hint: None, None
    size: "260dp", "100dp"
    pos_hint: {"center_x": .75, "center_y": .65}
    padding: 10,10,10,10
    orientation: "vertical"
    spacing: 10

    MDLabel:
        text: "PLAYING A GAME"
        bold: True
        adaptive_height: True
        font_size: "10sp"

    BoxLayout:
        orientation: "horizontal"
        spacing: "10dp"

        
        AsyncImage:
            id: large_image
            source: ""
            pos_hint: {"top": 1}
            size: "50dp", "50dp"
            size_hint: None, None
            allow_stretch: True
            keep_ratio: False

        BoxLayout:
            orientation: "vertical"
            
            MDLabel:
                id: name
                text: root.data["name"]
                adaptive_height: True
                bold: True
                font_size: "11sp"

            MDLabel:
                id: details
                text: root.data["details"]
                font_size: "10sp"
            MDLabel:
                id: state
                text: root.data["state"]
                font_size: "10sp"


<ButtonBar>:
    pos_hint:{"x":0.02,"y":.18}
    spacing: 10
    size_hint: .3, None
    padding: 20
        
<MainButton>:
    font_size: "11sp"
    font_name: "fonts/Roboto-Regular.ttf"
    weight: "bold"
    pos_hint: {"top":1}
    size_hint: 1, None
    md_bg_color: utils.get_color_from_hex("#4f545c")
    md_radius: "7dp"

<PopupContent>:
    orientation: "vertical"
    spacing: 20

    MDTextField:
        id: label
        hint_text: "Label"
        mode:"rectangle"
        pos_hint: {"center_x":.5}
        size_hint: .7,None
 
    MDTextField:
        id: url
        hint_text: "url"
        mode:"rectangle"
        pos_hint: {"center_x":.5}
        size_hint: .7,None
    
    BoxLayout:
        id:bar
        spacing: 10
        MDRaisedButton:
            id: add_button
            text: "Add"
   